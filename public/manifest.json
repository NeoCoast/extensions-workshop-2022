{
  "name": "neocoast-workshop",
  "version": "1.0",
  "manifest_version": 3,

  "applications": {
    "gecko": {
      "id": "@neocoast-workshop"
    }
  },

  "icons": {
    "48": "icons/icon_48.png",
    "96": "icons/icon_96.png",
    "128": "icons/icon_128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "NeoCoast Workshop",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "storage",
    "downloads",
    "notifications"
  ]
}
